<h1> Dashboard </h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>
       Features
      </th>
    </tr>
  </thead>

    <tbody>

    <% @features.uniq.each do |feature| %>
      <tr>
        <td> <%=feature%> </td>
      </tr>
      <tr>
        <td>
          <button type="button" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          </button>
        </td>
      </tr>
    <% end %>

    </tbody>



</table>
